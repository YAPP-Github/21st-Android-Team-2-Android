<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/lockerDetailImageView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@color/gray_01"
        android:gravity="center"
        android:textAlignment="center"
        android:src="@drawable/locker_icon_checked"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/bottomSheet"
        layout="@layout/fragment_locker_detail_bottom_sheet"
        tools:layout_gravity="bottom"
        tools:layout_height="@dimen/tools_bottom_sheet_height"
        tools:layout_width="match_parent" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
