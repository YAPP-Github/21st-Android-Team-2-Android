<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:minWidth="320dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="320dp"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            style="@style/ItemFinderTypography.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/category"
            android:textColor="@color/gray_04" />

        <RadioGroup
            android:id="@+id/categoryRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                style="@style/ItemFinderTypography.Body1"
                android:id="@+id/lifeRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:button="@null"
                android:drawableEnd="@drawable/selector_category_check"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/selector_ic_life"
                android:paddingVertical="8dp"
                android:stateListAnimator="@null"
                android:text="@string/life"
                android:textColor="@drawable/selector_text_color" />

            <RadioButton
                style="@style/ItemFinderTypography.Body1"
                android:id="@+id/foodRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:button="@null"
                android:drawableEnd="@drawable/selector_category_check"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/selector_ic_food"
                android:paddingVertical="8dp"
                android:stateListAnimator="@null"
                android:text="@string/food"
                android:textColor="@drawable/selector_text_color" />

            <RadioButton
                style="@style/ItemFinderTypography.Body1"
                android:id="@+id/fashionRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:button="@null"
                android:drawableEnd="@drawable/selector_category_check"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/selector_ic_fashion"
                android:paddingVertical="8dp"
                android:stateListAnimator="@null"
                android:text="@string/fashion"
                android:textColor="@drawable/selector_text_color" />
        </RadioGroup>

    </LinearLayout>

</androidx.cardview.widget.CardView>
