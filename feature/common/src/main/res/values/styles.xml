<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ItemFinderTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/brown_02</item>
        <item name="colorAccent">@color/orange</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>

        <!-- font -->
        <item name="android:textViewStyle">@style/PretendardTextViewStyle</item>
        <item name="android:buttonStyle">@style/PretendardButtonStyle</item>
    </style>

    <style name="ItemFinderSplashTheme" parent="ItemFinderTheme">
        <item name="background">@color/brown_02</item>
    </style>

    <style name="ItemFinderHomeTabTheme" parent="ItemFinderTheme">
        <item name="android:background">@color/brown_02</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@color/orange_20</item>
        <item name="fontFamily">@font/unbounded_regular</item>
    </style>

    <style name="PretendardTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="PretendardButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">32dp</item>
        <item name="android:shadowColor">#FCFBF9</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert"/>

    <style name="DefaultGray04Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColor">@color/gray_04</item>
        <item name="android:textAppearance">@style/ItemFinderTypography.Head</item>
        <item name="titleTextAppearance">@style/ItemFinderTypography.Head</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextColor">@color/gray_04</item>
    </style>

    <style name="DefaultGray05Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColor">@color/gray_05</item>
        <item name="android:textAppearance">@style/ItemFinderTypography.Head</item>
        <item name="titleTextAppearance">@style/ItemFinderTypography.Head</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextColor">@color/gray_05</item>
    </style>

</resources>
