<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ItemFinderTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/brown_02</item>
        <item name="colorAccent">@color/orange</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>

        <!-- font -->
        <item name="android:textViewStyle">@style/PretendardTextViewStyle</item>
        <item name="android:buttonStyle">@style/PretendardButtonStyle</item>

        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>

    <style name="ItemFinderSplashTheme" parent="ItemFinderTheme">
        <item name="background">@color/brown_02</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemRippleColor">@color/orange_20</item>
        <item name="fontFamily">@font/unbounded_regular</item>
    </style>

    <style name="PretendardTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="PretendardButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">32dp</item>
        <item name="android:shadowColor">#FCFBF9</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Dialog.Alert" />

    <style name="SpinnerDatePicker">
        <item name="windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="DefaultToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textAppearance">@style/ItemFinderTypography.Head</item>
        <item name="titleTextAppearance">@style/ItemFinderTypography.Head</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="ChipButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">@dimen/typography_body2</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
        <item name="android:foreground">@drawable/ripple_black_radius_8</item>
    </style>

    <style name="ChipButton.Order" parent="ChipButton">
        <item name="android:background">@drawable/bg_chip_filter_order</item>
        <item name="android:textColor">@color/gray_04</item>
        <item name="android:drawableTint">@color/gray_04</item>
    </style>

    <style name="ChipButton.Condition" parent="ChipButton">
        <item name="android:background">@drawable/bg_chip_filter_condition</item>
        <item name="android:textColor">@color/gray_05</item>
        <item name="android:drawableTint">@color/gray_05</item>
    </style>

    <style name="ChipFrameStyle">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>

    </style>

    <style name="ChipFrameStyle.Category">
        <item name="android:background">@drawable/bg_chip_category</item>
    </style>

    <style name="ChipFrameStyle.Tag">
        <item name="android:background">@drawable/bg_chip_tag</item>
    </style>

    <style name="ChipFrameStyle.Overflow">
        <item name="android:background">@drawable/bg_chip_empty_tag</item>
    </style>

    <style name="ChipTextViewStyle" parent="ItemFinderTypography.Body4" />

    <style name="ChipTextViewStyle.Category">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChipTextViewStyle.Tag">
        <item name="android:textColor">@color/gray_05</item>
    </style>

    <style name="ChipTextViewStyle.Overflow">
        <item name="android:textColor">@color/brown_05</item>
    </style>

</resources>
