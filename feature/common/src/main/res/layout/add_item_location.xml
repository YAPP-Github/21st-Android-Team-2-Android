<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemLocationTitle"
        style="@style/ItemFinderTypography.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemLocationHintTextView"
            style="@style/ItemFinderTypography.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="@string/selectItemLocation"
            android:textColorHint="@color/gray_03" />

        <TextView
            android:id="@+id/itemLocationSpaceTextView"
            style="@style/ItemFinderTypography.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_06"
            tools:text="서재" />

        <ImageView
            android:id="@+id/arrowForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.5dp"
            android:src="@drawable/ic_arrow_forward_7" />

        <TextView
            android:id="@+id/itemLocationLockerTextView"
            style="@style/ItemFinderTypography.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.5dp"
            android:textColor="@color/gray_06"
            tools:text="서랍장" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/itemLocationGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="itemLocationSpaceTextView,itemLocationLockerTextView" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/gray_02" />

</LinearLayout>
